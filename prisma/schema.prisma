datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PromptEntry {
  id             String   @id @default(uuid())
  prompt         String
  negativePrompt String?
  imageUrl       String?
  width          Int      @default(1024)
  height         Int      @default(1024)
  sampler        String?  @default("Euler a")
  seed           Int?     @default(-1)
  cfgScale       Float?   @default(7.0)
  steps          Int?     @default(25)
  tags           String?
  promptZh       String? // Translated Chinese prompt for display
  originalPrompt String? // User's original input (preserving language)
  isFavorite     Boolean  @default(false)
  createdAt      DateTime @default(now())
  embedding      String? // JSON string of float array for semantic search

  // Relations
  personaId String?
  persona   AlchemistPersona? @relation(fields: [personaId], references: [id])

  tagsRelation Tag[] // Many-to-Many relation with normalized tags

  collections Collection[] // Many-to-Many relation

  // Indexes for performance
  @@index([isFavorite])
  @@index([createdAt])
  @@index([personaId])
}

model Collection {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  coverImage  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  prompts PromptEntry[]
}

model Tag {
  id        String        @id @default(uuid())
  name      String        @unique
  count     Int           @default(0) // Cache count of prompts for sorting
  lastUsed  DateTime      @default(now())
  createdAt DateTime      @default(now())
  prompts   PromptEntry[]

  @@index([count])
  @@index([lastUsed])
}

model PromptSnippet {
  id        String   @id @default(uuid())
  category  String // "Lighting", "Camera", "Style", "Quality", "subject"
  content   String // "rim lighting", "8k resolution"
  label     String // "輪廓光", "8K"
  createdAt DateTime @default(now())
}

model Character {
  id          String   @id @default(uuid())
  name        String
  description String?
  basePrompt  String
  seed        Int?     @default(-1)
  avatarUrl   String?
  createdAt   DateTime @default(now())
}

model PromptTemplate {
  id        String   @id @default(uuid())
  category  String // e.g. "Commercial", "3D Art"
  name      String
  prompt    String
  desc      String
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model AlchemistPersona {
  id           String        @id @default(uuid())
  name         String
  description  String?
  systemPrompt String // large text
  isDefault    Boolean       @default(false)
  builtin      Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  PromptEntry  PromptEntry[]
}
